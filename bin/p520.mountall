#!/bin/sh
if [ x"$1" = x-k ]; then
    sudo umount -lf ~/mnt/*/*
    sudo killall -9 /sbin/mount.cifs
fi
mnt=$(mount)
for nm in ~/mnt/p520/* ~/mnt/unots2/* ~/mnt/vPCS/*; do
    if [ $(echo "$mnt" | grep $nm | grep -v autofs | wc -l) -ge 1 ]; then
        echo "$nm ok."
    else
        echo "mounting $nm"
        mount $nm
    fi
done
wait
