#!/bin/sh
M=
if which curl >/dev/null; then
  CMD=curl
else
  CMD='wget -O-'
fi
# http://c758482.r82.cf2.rackcdn.com/Sublime%20Text%202%20Build%202181%20x64.tar.bz2
[ $(uname -m) = 'x86_64' ] && M='%20x64'
cd ~/Downloads && rm -rf Sublime\ Text\ 2 \
&& $CMD "http://www.sublimetext.com/Sublime%20Text%202%20Build%20${1}${M}.tar.bz2" \
| tar xjf - && cd Sublime\ Text\ 2 && rsync -av * /usr/local/lib/SublimeText2/
