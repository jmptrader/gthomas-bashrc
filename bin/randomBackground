#!/bin/sh
DIR=$HOME/.cache/wallpapers
if [ -e "$DIR" ]; then
    n=$(ls -t $DIR | wc -l)
    if [ $n -ge 1 ]; then
        exec feh --bg-scale $(shuf -e -n 1 $DIR/*.jp*g)
    fi
    if [ $n -le 20 ]; then
        grabwallpapers
    fi
    feh --bg-scale $(shuf -e -n 1 $DIR/*.jp*g)
else
    mkdir -p $DIR
fi
