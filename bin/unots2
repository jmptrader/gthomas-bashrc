#!/bin/sh
#xfreerdp -k 0x409 -x m -a 16 -z -g 1900x1080 -d unosoft -u tgulacsi --ignore-certificate --sec tls unots2
SC=
if lsusb | grep -q Gem; then
    SC=/smartcard:Gemalto
fi
prog=${XFREERDP:-xfreerdp}
host=${HOST:-unots2}
pkill -f "${prog}.*/v:${host}"
CMD="${prog} /codec-cache:nsc +async-input +async-update /size:$(getscreensize 2 16) /cert-ignore /sec:tls /drive:tmp,/tmp +clipboard /u:tgulacsi /d:unosoft $SC /v:${host} "$@""
echo "$CMD"
$CMD
#xfreerdp -g workarea --ignore-certificate --sec tls --plugin rdpdr --data scard disk:tmp:/tmp -- --plugin cliprdr unots2
