#!/bin/sh
dn=/run/user/$(id -u)
mkdir -p $dn

ifn=$dn/E.ssh-agent
sfn=$dn/S.ssh-agent
. $ifn
if [ -s $ifn ]; then
	rc=0
	ssh-add -l >/dev/null || rc=$?
	if [ $rc -eq 2 ]; then
		rm -f $ifn $sfn
	fi
fi
if [ ! -s $ifn ]; then
	killall -9 ssh-agent
	ssh-agent -s -a $sfn >$ifn
	. $ifn
fi
cat $ifn

ssh-add -l | fgrep -q 'SHA256:53GJlWP6jSgy+5dim4tFHzagbl1vERA0Donur48HXAc' \
	|| ssh-add ~/.ssh/tgulacsi2@unosoft
