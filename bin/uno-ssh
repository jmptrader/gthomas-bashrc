#!/bin/sh
find_pid () {
    [ -n "$SSH_AGENT_PID" ] && [ ! ssh-add -l >/dev/null ] && {
        SSH_AGENT_PID=; export SSH_AGENT_PID
    }
    [ -z "$SSH_AGENT_PID" ] && {
        [ -z "$SSH_AUTH_SOCK" ] && {
            SSH_AUTH_SOCK=$(ls /tmp/ssh-*/agent.*); export SSH_AUTH_SOCK
        }
        SSH_AGENT_PID=$(ps -C ssh-agent \
            --ppid $(echo ${SSH_AUTH_SOCK} \
            | cut -d. -f2) -o pid=,cmd | grep ssh-agent | cut -d/ -f1)
        export SSH_AGENT_PID
    }
}
echo SSH_AGENT_PID=$SSH_AGENT_PID SSH_AUTH_SOCK=$SSH_AUTH_SOCK
{
    ssh-add -l || {
        ssh-agent -k
        SSH_AGENT_PID=; export SSH_AGENT_PID
        SSH_AUTH_SOCK=; export SSH_AUTH_SOCK
        eval $(ssh-agent -t 7200)
    }
} | grep -q 'd5:dd:2a:1a:07:3c:75:fd:c8:d8:d6:4b:ed:a3:0d:3b' && exit 0
echo SSH_AGENT_PID=$SSH_AGENT_PID SSH_AUTH_SOCK=$SSH_AUTH_SOCK
env SSH_ASKPASS=/usr/bin/ssh-askpass ssh-add $HOME/.ssh/tgulacsi@unosoft
