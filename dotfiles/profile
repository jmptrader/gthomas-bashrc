# ~/.profile: executed by the command interpreter for login shells.
# This file is NOT read by bash(1), if ~/.bash_profile or ~/.bash_login
# exists.
# see /usr/share/doc/bash/examples/startup-files for examples.
# the files are located in the bash-doc package.

# the default umask is set in /etc/profile; for setting the umask
# for ssh logins, install and configure the libpam-umask package.
#umask 022

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    export PATH="$HOME/bin:$PATH"
fi
#export LANGUAGE="hu_HU:en_US:en"
export LANGUAGE="en"
export LANG="hu_HU.UTF-8"
export LC_ALL=

if [ -z "$_CACHE" ]; then
    C=$(readlink .cache)
    if [ -n "$C" ]; then
        mkdir -p $C
    fi

    makelink () {
        DN=$1
        if [[ ( -L $DN ) && ( -d $(readlink ~/$DN) ) ]]; then
            return
        fi
        if readlink ~/$DN >/dev/null; then
            dd=$(readlink ~/$DN)
            if [[ ! -d $dd ]]; then
                mkdir -p $dd
            fi
        else
            D=/tmp/${USER}
            if [[ -d $D/$DN ]]; then
                echo "Deleting ~/$DN"
                rm -ri ~/$DN && ln -fs $D/$DN ~/$DN
            else
                echo "Deleting $D/$DN"
                rm -ri $D/$DN
                echo "Moving ~/$DN to $D/$DN"
                mkdir -p $D && mv ~/$DN $D/ && ln -fs $D/$DN ~/$DN
            fi
        fi
    }

    makelink .cache
    makelink Downloads
    export _CACHE=1
fi

if [ -z "$_SSH_AGENT" ]; then
    gpg_agent_info=/tmp/$USER/.gpg-agent-info-$(hostname)
    if [ -d /tmp/$USER ]; then
        if [ -f $gpg_agent_info ]; then
            . $gpg_agent_info
            if readlink /proc/$SSH_AGENT_PID/exe >/dev/null; then
                echo "$gpg_agent_info ok"
                . "$gpg_agent_info"
                export GPG_AGENT_INFO
                export SSH_AUTH_SOCK
                export SSH_AGENT_PID
            else
                echo "stale $gpg_agent_info"
                rm $gpg_agent_info
            fi
        fi
    else
        mkdir -p /tmp/$USER
    fi
    if [ ! -f $gpg_agent_info ]; then
        echo "starting new gpg-agent"
        eval $(gpg-agent --daemon --enable-ssh-support \
            --write-env-file "$gpg_agent_info")
    fi

    if ! ssh-add -l | grep -q tgulacsi@unosoft; then
        ssh-add ~/.ssh/id_rsa
        ssh-add tgulacsi@unosoft
    fi
    export _SSH_AGENT=1
fi


#[ -e ~/.profabevjava ] && . ~/.profabevjava

# if running bash
if [ -n "$BASH_VERSION" ]; then
    # include .bashrc if it exists
    if [ -f "$HOME/.bashrc" ]; then
    . "$HOME/.bashrc"
    fi
fi

